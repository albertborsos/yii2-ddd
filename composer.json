{
    "name": "albertborsos/yii2-ddd",
    "description": "Classes for Domain-Driven Development with Yii 2.0 Framework",
    "type": "yii2-extension",
    "keywords": ["yii2","extension"],
    "license": "MIT",
    "authors": [
        {
            "name": "Abert Borsos",
            "email": "hello@borsosalbert.hu"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "yiisoft/yii2": "~2.0.14",
        "samdark/hydrator": "^1.0.2"
    },
    "require-dev": {
        "codeception/base": "~3.0",
        "codeception/verify": "~1.0",
        "codeception/specify": "~1.0",
        "codeception/mockery-module": "^0.3.0",
        "mockery/mockery": "^0.9.9 || ^1.0.0",
        "phpunit/phpunit": "^7.0.0",
        "hoa/file": "~1.0",
        "hoa/consistency": "^1.17.05.02",
        "squizlabs/php_codesniffer": "~2.8",
        "php-coveralls/php-coveralls": "^2.1",
        "mito/yii2-coding-standards": "~2.0.0-beta16"
    },
    "extra": {
        "bootstrap": "albertborsos\\ddd\\Bootstrap"
    },
    "autoload": {
        "psr-4": {
            "albertborsos\\ddd\\": "src/",
            "albertborsos\\ddd\\tests\\": "tests/",
            "albertborsos\\ddd\\tests\\support\\base\\": "tests/_support/base/",
            "albertborsos\\ddd\\tests\\support\\base\\domains\\": "tests/_support/base/domains",
            "albertborsos\\ddd\\tests\\support\\base\\modules\\": "tests/_support/base/modules",
            "albertborsos\\ddd\\tests\\support\\base\\services\\": "tests/_support/base/services"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
